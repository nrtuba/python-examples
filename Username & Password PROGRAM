kontrol = True  # dongumuz dogru oldugu surece calismamasi icin true degerini verip kontrol edebilirz.
while kontrol:
    k_adi = input("harflerden olusan bir kullanici adi giriniz:")
    harfler = "ABCÇDEFGĞHIİJKLMNOÖPRSŞTUÜVYZabcçdefgğhıijklmnoöprsştuüvyz"
    uzunluk = len(k_adi)  # kullanici adinin boyutu len() ile denetlensin.

    if uzunluk in range(3, 18):  # gecerli olmasi gereken uzunlugumuzu range() ile  belirtelim)
        a = 0
        for harf in k_adi:  # k_adinda girilen karakterlerin harflerin icinde olup olmadigini denetleyelim
            if harf in harfler:
                a = a + 1  # a+=1
        if  a == uzunluk:
            print("gecerli bir kullanici")
            break
    else:
        print("tekrar deneyin")
        continue
kontrol = True
while kontrol:
    # kullanici sifresini isteyelim
    k_sifre = input("rakamlardan olusan bir sifre giriniz:")
    rakamlar = "0123456789"
    uzunluk = len(k_sifre)
    # print(boyut)
    # kullanici sifresinin boyutu len() ile denetlensin.

    if uzunluk in range(6, 12):
        a = 0
        for rakam in k_sifre:  # sifredeki karakterlerin rakamlardan olup olmadigi denetlensin
            if rakam in rakamlar:
             a = a + 1  # a+=1
    if a == uzunluk:  # eger a degiskenimiz uzunluga esitse sifreyi gecerli olarak printlesin.
        print("gecerli bir sifre girdiniz")
        print("\nsifreniz ve kullanici adiniz basariyla kaydedildi.")
        break
    else:
        print("tekrar deneyin")
    continue
